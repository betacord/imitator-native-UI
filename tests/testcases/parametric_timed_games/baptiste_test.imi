	Simple PTG
    Expected constraint: TODO

*)
var
 	x : clock;
    y : clock;
    p : parameter;

automaton ptg

actions: c_1, u_1, u_2;

loc l1: invariant True
	when x = 1 & y = 2 sync c_1 goto Goal;
    when True sync c_1 goto l2;

loc l2: invariant True
    when True do {x:=0} sync u_1 goto l1;
    when True do {y:=0} sync u_2 goto l1;

accepting loc Goal: invariant True



end (* ptg *)

init :=
	& loc[ptg] = l1
	& x = 0
    & y = 0
	& p >= 0
;

end
