(* Mikael, Aarhus, April 5, 2023 
	Test predecessor
    Expected constraint: True
*)
var
 	x : clock;

automaton ptg

actions: c_1, c_2, u_1, u_2;

loc l0 : invariant True 
    when x >= 1 sync c_1 goto Win;
    when x < 1 do {x:=0.1} sync u_1 goto l1;

loc l1 : invariant True
	when True sync c_2 goto Win;
    when x >= 1 sync u_2 goto Lose;

accepting loc Win : invariant True

loc Lose : invariant True


end (* ptg *)

init :=
	& loc[ptg] = l0
	& x = 0
;

end
