(* Mikael, Aarhus, March 24, 2023 
	Simple PTG - No parameters
    Expected constraint: 
        2 > p
        & p >= 0
        & q >= 5 + p
*)
var
 	x : clock;
    p : parameter;
    q : parameter;

automaton ptg

actions: u_1, c_1;

loc l1: True
	when p <= x && x <= q-5 sync c_1 goto Goal;
    when 2 <= x & x <= 5 sync u_1 goto l2;

loc l2: invariant True

accepting loc Goal: invariant True

end (* ptg *)

init :=
	& loc[ptg] = l1
	& x = 0
	& p >= 0
;

end
