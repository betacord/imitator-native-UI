	Simple PTG
    Expected constraint: TODO

*)
var
 	x : clock;
    y : clock;
    p : parameter;

automaton ptg

actions: c_1, c_2, u_1;

loc l1: invariant True
	when x = 1 sync c_1 goto Goal;
    when True sync u_1 goto l2;

loc l2: invariant True
    when x=0 sync c_2 goto Goal;

accepting loc Goal: invariant True



end (* ptg *)

init :=
	& loc[ptg] = l1
	& x = 0
    & y = 0
	& p >= 0
;

end
