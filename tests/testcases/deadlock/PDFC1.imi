var

(* Parameters *)
	p1, p2
		: parameter;



(************************************************************)
  automaton pta
(************************************************************)
synclabs: a, b;

loc l1: invariant True
	when p1 <= p2 sync a goto l2;

loc l2: invariant True
	when True sync a goto l2;

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)


init := {

    discrete =
		(*------------------------------------------------------------*)
		(* Initial location *)
		(*------------------------------------------------------------*)
		loc[pta] := l1,

		(*------------------------------------------------------------*)
		(* Initial discrete variables assignments *)
		(*------------------------------------------------------------*)

    ;

    continuous =
		(*------------------------------------------------------------*)
		(* Initial clock constraints *)
		(*------------------------------------------------------------*)

		(*------------------------------------------------------------*)
		(* Parameter constraints *)
		(*------------------------------------------------------------*)
	& p1 >= 0
	& p2 >= 0
	;
}


(************************************************************)
(* The end *)
(************************************************************)
end
