(* Jaco, Aarhus, July 22, 2022 *)
var
 	x : clock;
	p : parameter;
	c : rational;

automaton pta

synclabs: a;

loc l1: invariant x<=p
	when True do { 
        seq  c := 2
        then x := c 
        end } goto l2;

loc l2: invariant x <= p
	when True do {x := 0 } goto l2;

end (* pta *)

init :=
	& loc[pta] = l1
	& p >= 0
	& x = 0
	& c = 0
;

end
