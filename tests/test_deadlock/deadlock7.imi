var
 	x : clock;
	y : clock;
	p : parameter;
	q : parameter;
	c : rational;
	d : rational;

automaton pta

synclabs: a;

loc l1: invariant x<=p
	when True do { 
        seq
	c := 2;
	d := c + 2
        then 
	x := d,
	y := x
        end } goto l2;

loc l2: invariant x <= p & y <= q
	when True do {x := 0, y := 0 } goto l2;

end (* pta *)

init :=
	& loc[pta] = l1
	& p >= 0
	& q >= 0
	& x = 0
	& y = 0
	& c = 0
	& d = 0
;

end
